<Window x:Class="Task_Tracker.View.TaskTrackerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_Tracker.View"
        mc:Ignorable="d"
        Title="TaskTrackerWindow" Height="600" Width="800">
    <DockPanel>
		<StackPanel>
			<StackPanel Orientation="Horizontal"
						Margin="5">
				<ComboBox x:Name="projectSelectionComboBox"
						  Width="100"
						  SelectionChanged="ProjectSelectionComboBox_SelectionChanged"/>
				<TextBox x:Name="taskFilterTextBox"
						 Margin="5, 0, 0, 0"
						 Width="100"/>
			</StackPanel>
			<StackPanel Margin="5, 0, 5, 5">
				<ListView x:Name="taskListView">
					
				</ListView>
			</StackPanel>
		</StackPanel>
		<StackPanel>
			
		</StackPanel>
		<StackPanel>
			
		</StackPanel>
    </DockPanel>
</Window>
